{% extends 'base.html.twig' %}

{% block title %}Erreur 500{% endblock %}

{% block body %}
    <section class="vh-100 bg-image">
        <div class="d-flex align-items-center h-100">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5 text-center">
                                <p class="fs-1 m-0 text-danger"><i class="fa-solid fa-skull-crossbones"></i></p>
                                <h2 class="text-uppercase fs-1">Erreur 505</h2>
                                <p class="fs-5">Le serveur à renvoyé une erreur critique.</p>
                                {% if (app.user) %}
                                    <a href="{{ path("app_profil") }}" class="btn btn-bordeaux">Revenir à mon profile</a>
                                {% else %}
                                    <a href="{{ path("app_login") }}" class="btn btn-bordeaux">Me connecter</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
