{% extends 'base.html.twig' %}

{% block title %}Editer mon profil{% endblock %}

{% block body %}
    <section>
        <div class="container py-4">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">Accueil</li>
                            <li class="breadcrumb-item" aria-current="page">Édition profil</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <img src="{{ app.user.urlPicture }}" alt="avatar" class="rounded-circle img-fluid"
                                         style="width: 150px;">
                                    <h5 class="my-3">{{ app.user.name }}</h5>
                                    <p class="mb-1">Votre email : <span class="text-muted fw-bold">{{ app.user.email }}</span></p>
                                    {% if(app.user.valideRegister == false) %}
                                        <p class="mb-1">Compte : <span class="text-danger fw-bold">Compte non validé</span></p>
                                    {% else %}
                                        <p class="mb-1">Compte : <span class="text-success fw-bold">Compte validé</span></p>
                                    {% endif %}
                                    {% if(app.user.groupes == null) %}
                                        <p class="mb-1">Groupe : <span class="text-muted fw-bold">Aucun groupe</span></p>
                                    {% else %}
                                        <p class="mb-1">Groupe : <span class="text-muted fw-bold">{{ app.user.groupes.name }}</span></p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h3 class="my-3">Mettre à jour votre profil :</h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-center">
                                    <p>Work in progress !</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h3 class="my-3">Mettre à jour vos notifications :</h3>
                                </div>
                            </div>
                            <div class="row m-auto">
                                <div class="col-12 d-flex justify-content-center">
                                    {{ form_start(profilEditForm) }}
                                    <div class="form-check form-switch">
                                        <label class="form-check-label" for="switch_status_score_email">Recevoir des emails sur le status des scores</label>
                                        {{ form_widget(profilEditForm.status_score_email, {'attr': {'id': 'switch_status_score_email','class': 'form-check-input' ,'checked' : app.user.statusScoreEmail}}) }}
                                    </div>
                                    <div class="form-check form-switch">
                                        {{ form_widget(profilEditForm.reminder_bet_email, {'attr': {'id': 'switch_reminder_bet_email','class': 'form-check-input' ,'checked' : app.user.reminderBetEmail}}) }}
                                        <label class="form-check-label" for="switch_reminder_bet_email">Recevoir des emails d'alertes des paris non effectué</label>
                                    </div>
                                    {{ form_end(profilEditForm) }}
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
